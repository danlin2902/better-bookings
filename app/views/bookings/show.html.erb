<div class="container">

<% if @booking.trip.photo.present? %>
<%= cl_image_tag @booking.trip.photo, height: 300, width: 400, crop: :fill %>
<% end %>

<h1><%= @booking.trip.name %></h1>

<h3>Start date: <%= @booking.start_date %></h3>
<h3>End date: <%= @booking.end_date %></h3>

<p><%= @booking.trip.destination %></p>



</div>
