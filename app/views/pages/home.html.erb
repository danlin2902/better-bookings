  <div class='banner slider'>
  <div class='banner slide1'></div>
  <div class='banner slide2'></div>
  <div class='banner slide3'></div>

  <div class="head-container">
 <%= simple_form_for :search, url: root_path, method: :get do |f| %>
   <%= f.input :query, as: :string %>
   <%= f.submit "submit" %>
 <% end %>
  </div>
</div>
<!-- footer -->
<div class="inedx-cards" style="display: flex; flex-wrap: wrap; flex-direction: row;">
  <% @trip.each do |trip| %>
  <div class="card">
    <%= cl_image_tag trip.photo, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= trip.name %></h5>
      <p class="card-text"> <%= trip.destination %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>
  <% end %>
</div>

