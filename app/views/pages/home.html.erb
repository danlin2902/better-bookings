  <div class="head-container better-form-search">
    <h1>Better Bookings</h1>
 <%= simple_form_for :search, url: root_path, method: :get do |f| %>
   <%= f.input :query, as: :string, :placeholder => 'Search for trips' %>
   <%= f.submit "submit ", class: "btn btn-flat" %>
 <% end %>
  </div>
</div>

<h2>Reccomendations</h2>

<div class="index-cards container" >
  <% @trip.each do |trip| %>
  <div class="img-card">
    <%= cl_image_tag trip.photo, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= trip.name %></h5>
      <p class="card-text"> <%= trip.destination %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>
  <% end %>
</div>
